%table.table
  %thead
    %tr
      %th.scope=""
      %th.scope="title"
      %th.scope="description"
      %th.scope="isbn"
      %th.scope="image"
      %th.scope=""
  %tbody
    - @books.each do |book|
      %tr
        %th.scope=""
        %td
          = book.title
        %td
          = book.description
        %td
          = book.isbn
        %td
          %img{ src: "https://via.placeholder.com/150", alt: "placeholder" }
        %td
          = link_to 'Delete', book_path(book), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }
